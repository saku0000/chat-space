
.chat-side
  .chat-side__header
    .chat-side__header__box
      = current_user.name
      
      %ul.chat-side__header__box__menu
        %li.chat-side__header__box__menu__new-group
          = link_to new_group_path, class: "chat-side__btn" do
            = icon('fas','edit')
          
        %li.chat-side__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
                    

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__group-name
            = group.name
          %p.group__latest-message
            = group.show_last_message
